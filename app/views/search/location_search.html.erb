<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div id="map3" style="width: 600px; height: 500px;" data-landmark-zipcode="<%= @zipcode %>">Google Map will appear here...</div>
    </div>

    <div class="col-md-1">
    </div>


    <div class="col-md-5">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
              <th>website</th>
            </tr>
          </thead>

          <tbody>
            <% @landmarks.each do |landmark| %>
              <tr>
                <td>
                  <a href="/landmarks/<%= landmark.id.to_s %>" >
                    <%= landmark.name %>
                  </a>
                </td>
              <td>
                <a href="/landmarks/<%= landmark.id.to_s %>" >
                <%= landmark.address %>
                  </a>
              </td>
              <td>
                <a href="/landmarks/<%= landmark.id.to_s %>" >
                  <%= landmark.description %>
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
